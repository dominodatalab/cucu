{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate config",
  "extends": [
    "config:best-practices"
  ],
  "dateFormat": "YYMMDD",
  "additionalBranchPrefix": "{{date}}",
  "ignorePaths": [
    "**/.python-version"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true
    },
    {
      "groupName": "glom all dependencies",
      "matchFileNames": [
        "**"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    },
    {
      "description": "Ignore behave version updates due to compatibility issues",
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "behave"
      ],
      "enabled": false
    },
    {
      "description": "Ignore minor Python version updates",
      "matchFileNames": [
        "**Dockerfile",
        ".circleci/config.yml",
        ".github/workflows/*.yml"
      ],
      "matchDatasources": [
        "pyenv",
        "docker",
        "pypi"
      ],
      "matchPackageNames": [
        "cimg/python",
        "python"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "enabled": false
    }
  ]
}
